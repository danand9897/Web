<%- include('../comunes/cabecera') %>

<h1>Crear Nueva Planta</h1>
<div class="container">

    <% const existeMensaje = typeof datos.mensaje !== "undefined" %>
    <% if (existeMensaje){ %>
        <div class="alert alert-success" role="alert">
            <%= datos.mensaje %>
        </div>
    <% } %>

    <form style="padding: 10px" class="border border-dark" action='/planta/crear-planta-formulario' method="post">
        <div class="mb-3">
            <label for="nombreComun" class="form-label"> Nombre Común</label>
            <input placeholder="Ej: Sardinera"
                   type="text"
                   name="nombreComun"
                   class="form-control"
                   id="nombreComun"
                   aria-describedby="ayudaNombreComun"
                   required>
            <div id="ayudaNombreComun" class="form-text">
                Ingrese el nombre Común.
            </div>
        </div>
        <div class="mb-3">
            <label for="nombreCientifico" class="form-label"> Nombre Científico </label>
            <input placeholder="Ej: Chenopodium vulvaria"
                   type="text"
                   name="nombreCientifico"
                   class="form-control"
                   id="nombreCientifico"
                   aria-describedby="ayudaNombreCientifico"
                   required>
            <div id="ayudaNombreCientifico" class="form-text">
                Ingrese la nombre Científico.
            </div>
        </div>

        <div class="mb-3">
            <label for="familia" class="form-label"> Tipo </label>
            <input placeholder="Ej: Chenopodiaceae"
                   type="text"
                   name="familia"
                   class="form-control"
                   id="familia"
                   aria-describedby="ayudafamilia"
                   required>
            <div id="ayudafamilia" class="form-text">
                Ingrese la familia de la planta.
            </div>
        </div>
        <div class="mb-3">
            <label for="precio" class="form-label"> Precio ($) </label>
            <input placeholder="Ej: 10.99"
                   type="number"
                   step="0.01"
                   name="precio"
                   class="form-control"
                   id="precio"
                   aria-describedby="ayudaprecio"
                   required>
            <div id="ayudaprecio" class="form-text">
                Ingrese el precio.
            </div>
        </div>

        <div class="mb-3">
            <label>
                <input type="checkbox"
                       name="stock"
                       id="stock"
                >
                Stock
            </label>

            <div id="ayudastock" class="form-text">
                Marque el recuadro si existe la planta en almacen.
            </div>
        </div>

        <button type="submit" class="btn btn-primary w-100">Crear</button>
    </form>
</div>


<%- include('../comunes/footer') %>
