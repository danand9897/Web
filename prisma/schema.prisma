datasource db {
  provider = "mysql"
  url      = "mysql://root:123456789@localhost:3010/web"
}

generator client {
  provider = "prisma-client-js"
}

model EPN_USUARIO {
  id                Int         @id @default(autoincrement())
  fechaCreacion     DateTime    @default(now())
  apellido          String
  nombreComun            String?
  mascotas          Mascota[]
}

model Mascota {
  id                Int         @id @default(autoincrement())
  nombreComun            String
  usuario           EPN_USUARIO @relation(fields: [usuarioId], references: [id])
  usuarioId         Int
}


model Planta {
    id                Int         @id @default(autoincrement())
    fechaCreacion     DateTime    @default(now())
    nombreComun       String
    nombreCientifico  String
    familia           String
    precio            Float
    stock             Boolean
}
